<h1>Listing ads</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Headline</th>
    <th>Body</th>
    <th>Advertiser</th>
    <th>Impression count</th>
    <th>Click count</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ads.each do |ad| %>
  <tr>
    <td><%= ad.name %></td>
    <td><%= ad.headline %></td>
    <td><%= ad.body %></td>
    <td><%= ad.advertiser_id %></td>
    <td><%= ad.impression_count %></td>
    <td><%= ad.click_count %></td>
    <td><%= ad.category %></td>
    <td><%= link_to 'Show', ad %></td>
    <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
    <td><%= link_to 'Destroy', ad, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

